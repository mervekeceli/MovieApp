@model Movie
<html xmlns="http://www.w3.org/1999/xhtml">
    
    <head>
        <title></title>
        <link href="/css/style.css" rel="stylesheet" />
    </head>
    <body>  
        <h1>Film Listesi</h1>

        <div id="filmler">
            <div class="film">
                <p>@Model.Title</p>
                <p>@Model.Description</p>
                <p>@Model.Director</p>
                <p>
                    <ul>
                        @foreach (var item in Model.Players)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </p>
            </div>
        </div>
    </body>
</html>
