@model AdminMoviesViewModel

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="width: 30px" scope="col">#</th>
            <th style="width: 100px" scope="col">Image</th>
            <th scope="col">Title</th>
            <th style="width: 300px" scope="col">Genres</th>
            <th style="width: 160px" scope="col"></th>
        </tr>
    </thead>
    <tbody>

        @foreach(var movie in Model.Movies)
        {
            <tr>
                <th scope="row">@movie.MovieId</th>
                <td><img src="~/img/@movie.ImageUrl" width="80"/></td>
                <td>@movie.Title</td>
                <td>
                    <ul>
                        @foreach(var genre in movie.Genres)
                        {
                            <li>@genre.Name</li>
                        }
                    </ul>
                </td>
                <td>
                    <a href="/admin/movieUpdate/@movie.MovieId" class="btn btn-primary btn-sm">Update</a>

                    <form action="/admin/movieDelete" method="post" style="display: inline;">
                        <input type="hidden" name="movieId" value="@movie.MovieId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>