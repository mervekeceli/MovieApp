@model Movie


<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src ="/img/@Model.ImageUrl" alt="@Model.Title"/>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.Director</p>
                <p class="card-text">
                    <ul>
                        @foreach (var item in Model.Players)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </p>
            </div>
        </div>
    </div>
</div>
